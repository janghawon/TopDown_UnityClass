.btn {
    padding-left: 12px;
    padding-right: 12px;
    padding-top: 8px;
    padding-bottom: 8px;
    font-size: 30px;
    background-color: rgba(177, 136, 255, 255);
    transition-property: background-color;
    transition-duration: 0.2s;
}

.btn:hover {
    color: rgba(255, 255, 255, 255);
    background-color: rgba(255, 0, 0, 255);
}
